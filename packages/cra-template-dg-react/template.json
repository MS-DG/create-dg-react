{
  "$schema": "https://schemastore.azurewebsites.net/schemas/json/package.json",
  "dependencies": {
    "@testing-library/react": "latest",
    "@testing-library/dom": "latest",
    "@testing-library/jest-dom": "latest",
    "@testing-library/user-event": "latest",
    "rxjs": "latest",
    "i18next": "latest",
    "react-i18next": "latest"
  },
  "devDependencies": {
    "@shennong/eslint-plugin": "latest",
    "stylelint-prettier": "latest",
    "stylelint-scss": "latest",
    "stylelint-order": "latest",
    "stylelint-config-recommended-scss": "latest",
    "stylelint-config-rational-order": "latest"
  },
  "scripts": {
    "format": "react-scripts format",
    "pre-commit": "react-scripts format staged",
    "pre-push": "react-scripts format --check --strict && npm test",
    "preinstall": "npx vsts-npm-auth -c .npmrc || echo Auth FAIL!"
  },
  "prettier": "@dragongate/eslint-config/prettier",
  "eslintConfig": {
    "extends": ["@dragongate/eslint-config","plugin:@shennong/strict"]
  },
  "stylelint": {
    "extends": "@dragongate/stylelint-config"
  }
}